  <div class="page-header">
    <div class="drift-logo">
      DRIFT
    </div>
    <div class="user-profile">profile</div>
    <div class="drift-cart">cart</div>
  </div>
  <!-- Suggestions View -->

  <div ng-controller="SuggestionsViewController as suggestionsCtrl" class="container-fluid suggestions-container">
    <!-- Suggestions header -->
    <div class="row suggestions-header">
      <div class="tab-buttons-group">
        <div class="all-button tab-button" ng-click="tabPressed(1)" ng-class="{'tab-selected': currentTab == 1}">Events and Activities</div>
        <div class="events-button tab-button" ng-click="tabPressed(2)" ng-class="{'tab-selected': currentTab == 2}">Events</div>
        <div class="activities-button tab-button" ng-click="tabPressed(3)" ng-class="{'tab-selected': currentTab == 3}">Activities</div>
      </div>
    </div>

    <!-- Modal view -->
    <div class="suggestion-modal-container" ng-controller="SuggestionsModalController">
      <div class="suggestion-modal-cross" ng-click="closeModal()" ng-show="isModalVisible" ng-class="{'fade-in': isModalVisible}">
        <img src="../assets/modal-cross.png"/>
      </div>
      <div class="suggestion-modal" ng-show="isModalVisible" ng-class="{'fade-in': isModalVisible}">
        <img src="{{data.img}}"/>
        <div class="suggestion-modal-content">
          <h2><b>{{data.title}}</b></h2>
          <h4>{{data.date}}</h4>
          <p>{{data.text}}</p>
        </div>
      </div>

      <div class="suggestion-modal-overlay" ng-show="isModalVisible" ng-class="{'fade-in': isModalVisible}"></div>

    <div class="row">
      <!-- City nav bar -->
      <div class="city-nav-bar">
        <div ng-repeat="city in cities">
          <div class="city-button">{{city}}</div>
        </div>
      </div>

      <!-- Gallery-->
      <div class="suggestion-gallery">

        <div class="all-tab-content" ng-show="currentTab == 1">
          <div class="suggestion-element" ng-click="showModal()">

          </div>
          <div class="suggestion-element" ng-click="showModal()">

          </div>
          <div class="suggestion-element" ng-click="showModal()">

          </div>
          <div class="suggestion-element" ng-click="showModal()">

          </div>
